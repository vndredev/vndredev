---
import { useTranslations, getAlternateLangUrl, switchLang, type Lang } from '@/i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
const alternateLang = switchLang(lang);
const alternateLangUrl = getAlternateLangUrl(Astro.url, lang);

const legalLinks = lang === 'de'
  ? [
      { name: t('footer.imprint'), href: '/de/impressum' },
      { name: t('footer.privacy'), href: '/de/datenschutz' },
    ]
  : [
      { name: t('footer.imprint'), href: '/en/imprint' },
      { name: t('footer.privacy'), href: '/en/privacy' },
    ];
---

<footer class="py-16 glass-footer">
  <div class="max-w-[980px] mx-auto px-6">
    <div class="flex flex-col gap-6">
      <!-- Legal Links + Language Switch -->
      <div class="flex flex-col sm:flex-row justify-center items-center gap-4 sm:gap-8">
        {legalLinks.map((link) => (
          <a
            href={link.href}
            class="text-base text-[var(--text-secondary)] hover:text-[var(--color-accent)] transition-colors"
          >
            {link.name}
          </a>
        ))}
        <a
          href={alternateLangUrl}
          class="px-4 py-1.5 rounded-full glass-button text-sm font-medium text-[var(--text-secondary)] hover:text-[var(--color-accent)] transition-colors"
        >
          {alternateLang.toUpperCase()}
        </a>
      </div>

      <!-- Copyright -->
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-6 border-t border-[var(--text-secondary)]/10">
        <p class="text-sm text-[var(--text-secondary)]">
          &copy; {currentYear} Andre Schmidt. {t('footer.rights')}
        </p>
        <p class="text-sm text-[var(--text-secondary)]">
          Built with <a href="https://astro.build" target="_blank" rel="noopener" class="text-[var(--color-accent)] hover:underline">Astro</a>
        </p>
      </div>
    </div>
  </div>
</footer>
